---
title: Schedule
layout: layouts/base.njk
permalink: "/schedule/index.html"
---
<div class="container mx-auto px-4 py-16">
  <h1 class="text-4xl font-bold mb-6">Schedule</h1>
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {% for movie in collections.movies | reverse %}
      <a href="{{ movie.url }}" class="card bg-base-100 shadow-lg hover:shadow-xl transition">
        <figure class="aspect-[3/4] bg-base-300"></figure>
        <div class="card-body">
          <h2 class="card-title">{{ movie.data.title }}</h2>
          <p>{{ movie.data.tagline }}</p>
          <div class="text-sm opacity-70">{{ movie.data.date | date: "%Y-%m-%d" }}</div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>
