<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ title or site.name }}</title>
<meta name="description" content="{{ site.description }}">

<link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">

{# --- Netlify Identity hash router: send tokens to /admin/ --- #}
<script>
  (function () {
    var h = window.location.hash || "";
    // Netlify Identity uses #recovery_token and #invite_token
    if (h.startsWith("#recovery_token=") || h.startsWith("#invite_token=")) {
      var target = "{{ '/admin/' | url }}" + h; // keep token intact
      window.location.replace(target);
    }
  })();
</script>
