{
  "name": "philm1",
  "version": "1.0.0",
  "private": true,
  "description": "Eleventy + Tailwind v4 + daisyUI + Decap",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/assets/css/input.css -o ./dist/css/styles.css --minify --content \"./src/**/*.{njk,md,html}\"",
    "watch:css": "npx @tailwindcss/cli -i ./src/assets/css/input.css -o ./dist/css/styles.css --watch --content \"./src/**/*.{njk,md,html}\"",
    "build:11ty": "eleventy",
    "serve:11ty": "eleventy --serve",
    "build": "npm run build:css && npm run build:11ty",
    "dev": "concurrently -k \"npm:watch:css\" \"npm:serve:11ty\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^9.0.0",
    "daisyui": "^5.0.0",
    "npm-run-all": "^4.1.5"
  }
}
